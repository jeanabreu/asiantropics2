<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="aspl_security_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]//div[@data-key='account']" position="inside">
                <div>
                    <h2>Retenciones</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-12 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="iva_retencion_account_id" />
                                <div class="row">
                                    <div class="text-muted col-lg-12">
                                        <field name="iva_retencion_account_id" />
                                    </div>
                                    <div class="text-muted col-lg-12">
                                        Ingrese el diario de las retenciones de IVA.
                                    </div>
                                </div>
                                <label for="isr_retencion_account_id" />
                                <div class="row">
                                    <div class="text-muted col-lg-12">
                                        <field name="isr_retencion_account_id" />
                                    </div>
                                    <div class="text-muted col-lg-12">
                                        Ingrese el diario de las retenciones de ISR.
                                    </div>
                                </div>
                                <label for="show_analytic_lines" />
                                <div class="row">
                                    <div class="text-muted col-lg-12">
                                        <field name="show_analytic_lines" />
                                    </div>
                                    <div class="text-muted col-lg-12">
                                        Indique si desea que se muestren las líneas analíticas en el detalle de las facturas.
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div>
                    <h2>Pagos electronicos</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-12 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="user_electronic_payment" />
                                <div class="row">
                                    <div class="text-muted col-lg-12">
                                        <field name="user_electronic_payment" />
                                    </div>
                                    <div class="text-muted col-lg-12">
                                        Bo. Pagos electronicos
                                    </div>
                                </div>
                                <label for="manager_electronic_payment" />
                                <div class="row">
                                    <div class="text-muted col-lg-12">
                                        <field name="manager_electronic_payment" />
                                    </div>
                                    <div class="text-muted col-lg-12">
                                        Encargado Pagos electronicos
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </xpath>
        </field>

    </record>
</odoo>